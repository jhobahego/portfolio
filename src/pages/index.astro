---
import Layout from "../layouts/Layout.astro";
import ProjectCard from "../components/ProjectCard.astro";

const projects = [
  {
    title: "Todo App TS",
    description:
      "Aplicación de lista de tareas en la que puedes gestionar tus pendientes, marcar tareas como activas o completadas. Desarrollada con React, TypeScript y Tailwind.",
    image: "/img/projects/todo-app.webp",
    url: "https://jhobadev-todo-app-ts.netlify.app",
    technologies: ["React", "TypeScript", "Tailwind"],
  },
  {
    title: "Reading List",
    description:
      "Aplicación para gestionar una lista de libros por leer, con filtros por género y número de páginas. Desarrollada con Vue, TypeScript y Tailwind.",
    image: "/img/projects/better-books.webp",
    url: "https://jhobadev-reading-list.netlify.app",
    technologies: ["Vue", "TypeScript", "Tailwind"],
  },
  {
    title: "TyperMaster",
    description:
      "Juego interactivo para medir y mejorar la velocidad de escritura. Desarrollado con Vue, TypeScript y Tailwind, pon a prueba tus habilidades en el tipeo.",
    image: "/img/projects/typermaster.webp",
    url: "https://jhobadev-typermaster.netlify.app",
    technologies: ["Vue", "TypeScript", "Tailwind"],
  },
  {
    title: "ChatPDF",
    description:
      "Aplicación web que permite interactuar con documentos PDF a través de un chat. Desarrollada con Astro, Svelte y TypeScript para una experiencia moderna y rápida.",
    image: "/img/projects/chat-pdf.webp",
    url: "https://jhobadev-chatpdf.netlify.app",
    technologies: ["Astro", "Svelte", "TypeScript"],
  },
];
---

<Layout title="Jhon Hernández - Portfolio">
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section
      class="min-h-screen flex items-center justify-center bg-gradient-to-b from-gray-900 to-gray-800 text-white py-20"
      id="home"
    >
      <div class="container mx-auto px-4 text-center" data-aos="fade-up">
        <img
          src="https://github.com/jhobahego.png"
          alt="Jhon Hernández"
          class="w-32 h-32 rounded-full mx-auto mb-8 border-4 border-purple-500"
        />
        <h1 class="text-5xl font-bold mb-4">Jhon Hernández</h1>
        <p class="text-xl text-gray-300 mb-8">Desarrollador Full Stack</p>
        <p class="max-w-2xl mx-auto text-gray-300 mb-8">
          Estudiante de Ingeniería en Sistemas en octavo semestre en la
          Universidad Remington de Colombia. Experiencia en desarrollo web con
          PHP (Laravel), Java (Spring Boot), y bases de datos relacionales como
          MySQL y PostgreSQL.
        </p>
        <div class="flex justify-center gap-4">
          <a
            href="https://github.com/jhobahego"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-purple-600 hover:bg-purple-700 text-white px-6 py-3 rounded-full transition-colors"
          >
            GitHub
          </a>
          <a
            download="public/Curriculum.docx"
            href="#"
            class="bg-transparent border-2 border-purple-600 text-white px-6 py-3 rounded-full hover:bg-purple-600 transition-colors"
          >
            CV
          </a>
        </div>
      </div>
    </section>

    <!-- Projects Section -->
    <section
      id="projects"
      class="py-20 bg-gray-100 dark:bg-gray-800 px-10 md:px-32"
    >
      <div class="container mx-auto px-4">
        <h2
          class="text-4xl font-bold text-center mb-12 text-gray-900 dark:text-white"
          data-aos="fade-up"
        >
          Proyectos
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {projects.map((project) => <ProjectCard {...project} />)}
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section
      id="contact"
      class="py-20 bg-white dark:bg-gray-900 px-10 md:px-32"
    >
      <div class="container mx-auto px-4">
        <h2
          class="text-4xl font-bold text-center mb-12 text-gray-900 dark:text-white"
          data-aos="fade-up"
        >
          Contacto
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div data-aos="fade-up">
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
              Información de contacto
            </h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4">
              Si deseas contactarme, puedes hacerlo a través de mis redes
              sociales o enviarme un correo electrónico.
            </p>
            <ul class="space-y-2">
              <li>
                <a
                  href="#"
                  class="flex items-center space-x-2 text-gray-900 dark:text-white hover:text-purple-600 dark:hover:text-purple-400"
                >
                  <span class="inline-flex w-5 h-5">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      style="width: 20px; height: 20px; min-width: 20px; min-height: 20px;"
                    >
                      <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                      <path d="M22 12h-20"></path>
                      <path d="M12 5l7 7l-7 7"></path>
                    </svg>
                  </span>
                  <span> Colombia, Sucre </span>
                </a>
              </li>
              <li>
                <a
                  href="mailto:jhobahego23@gmail.com"
                  class="flex items-center space-x-2 text-gray-900 dark:text-white hover:text-purple-600 dark:hover:text-purple-400"
                >
                  <span class="inline-flex w-5 h-5">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      style="width: 20px; height: 20px; min-width: 20px; min-height: 20px;"
                    >
                      <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                      <path d="M22 12l-10 -10l-10 10l10 10l10 -10"></path>
                    </svg>
                  </span>
                  <span> Jhobahego23@gmail.com </span>
                </a>
              </li>
            </ul>
          </div>
          <div data-aos="fade-up">
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
              Envíame un mensaje
            </h3>
            <form action="#" method="POST" class="space-y-4">
              <div class="flex flex-col space-y-1">
                <label for="name" class="text-gray-900 dark:text-white"
                  >Nombre</label
                >
                <input
                  type="text"
                  id="name"
                  name="name"
                  class="w-full px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-md focus:outline-none focus:ring focus:ring-purple-600 dark:focus:ring-purple-400"
                  required
                />
              </div>
              <div class="flex flex-col space-y-1">
                <label for="email" class="text-gray-900 dark:text-white"
                  >Correo electrónico</label
                >
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="w-full px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-md focus:outline-none focus:ring focus:ring-purple-600 dark:focus:ring-purple-400"
                  required
                />
              </div>
              <div class="flex flex-col space-y-1">
                <label for="message" class="text-gray-900 dark:text-white"
                  >Mensaje</label
                >
                <textarea
                  id="message"
                  name="message"
                  class="w-full px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-md focus:outline-none focus:ring focus:ring-purple-600 dark:focus:ring-purple-400"
                  rows="6"
                  required></textarea>
              </div>
              <button
                type="submit"
                class="bg-purple-600 hover:bg-purple-700 text-white px-6 py-3 rounded-full transition-colors"
                >Enviar mensaje</button
              >
            </form>
          </div>
        </div>
      </div>
    </section>
  </main>
  <!-- Add global SVG styling -->
  <style is:global>
    svg {
      display: block;
      width: 100%;
      height: 100%;
      max-width: 100%;
    }
  </style>
</Layout>
